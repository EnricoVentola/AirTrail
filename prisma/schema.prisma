datasource db {
  provider = "sqlite"
  url      = "file:../db.sqlite"
}

generator kysely {
  provider = "prisma-kysely"

  output    = "../src/lib/db"
  fileName  = "schema.d.ts"
  camelCase = true
}

model User {
  id           String @id
  username     String @unique
  password     String
  display_name String
  /// @kyselyType('metric' | 'imperial')
  unit         String

  /// @kyselyType('user' | 'admin')
  role String

  sessions Session[]
  flights  Flight[]
}

model Flight {
  id        Int    @id @default(autoincrement())
  date      String
  from      String
  to        String
  departure Int?
  arrival   Int?
  duration  Int?

  flight_number String?
  /// @kyselyType('window' | 'aisle' | 'middle' | 'other')
  seat          String?
  seat_number   String?
  /// @kyselyType('economy' | 'economy+' | 'business' | 'first' | 'private')
  seat_class    String?
  /// @kyselyType('leisure' | 'business' | 'crew' | 'other')
  flight_reason String?
  /// ICAO airline code
  airline       String?
  /// ICAO type code
  aircraft      String?
  aircraft_reg  String?
  note          String?

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Session {
  id         String @id
  expires_at Int
  user_id    String
  user       User   @relation(fields: [user_id], references: [id])
}
